@model IEnumerable<InventoryManagement.Models.Supplier>
@{
    Layout = "PageLayout";  
}

@{
    ViewData["Title"] = "Supplier List";
}
<div class="main-content">
    <h1 class="text-center">Supplier List</h1>

<div class="d-flex justify-content-between mb-3">
    
    <div>
        
        
            <a asp-action="Create" class="btn btn-success">Create New </a>
        
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.Name</td>
                <td>@supplier.ContactPhone</td>
                <td>@supplier.Email</td>
                <td>
                    <a href="@Url.Action("Edit", "Suppliers", new { id = supplier.SupplierID })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Suppliers", new { id = supplier.SupplierID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>